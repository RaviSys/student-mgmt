<div class="card rounded-0">
  <div class="card-body">
    <%= search_form_for q, url: :admin_projects do |form| %>
      <div class="form-group row">
        <div class="col-lg-3">
          <%= form.label :name %>
          <%= form.text_field :name_cont, class: "form-control" %>
        </div>
        <div class="col-lg-3">
          <%= form.label :description %>
          <%= form.text_field :description_cont, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to "Reset", admin_projects_path, class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
